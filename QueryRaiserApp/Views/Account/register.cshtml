@{
	Layout = "_login";
}
@model QueryRaiserApp.Models.Alldata

<div class="container align-middle d-flex justify-content-center" style="width:100%;height:100%" id="login">
    <div class="row mt-5 align-self-center">
        <div class="col bg-white  rounded " style="border-top:3px solid green;width:350px;">
            <h2 class="text-center mt-3">Register Now</h2>
            <p class="text-center text-muted lead">Hi! Buddy Welcome to New World</p>
            <!---- input start--->
            <div class="input-group pt-4">
                <span class="input-group-text">   <i class="fa-solid fa-user"></i></span>
                <input type="text" class="form-control" id="regname" placeholder="Enter Username" />
                <div class="valid-feedback">Looks Good</div>
                <div class="invalid-feedback">User Name Contain Six Character</div>
            </div>
         
            <div class="input-group pt-4">
                <span class="input-group-text"><i class="fa-regular fa-envelope"></i></span>
                <input type="email" class="form-control" id="regemail" placeholder="Enter Email" />
                <div class="valid-feedback">Looks Good</div>
                <div class="invalid-feedback">Enter Email Name</div>
            </div>
            <div class="d-flex flex-row pt-4 justify-content-between align-content-between">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="roleradio" value="112" id="sturadio" />
                <label class="form-check-label" for="sturadio">Student</label>
            </div>
            <div class="form-check pe-5">
            <input class="form-check-input" type="radio" name="roleradio"  id="empradio" />
            <label class="form-check-label" for="empradio">Employ</label>
            </div>
            </div>
            <div class=" pt-4" id="empdrop"  style="display:none">


                @Html.DropDownListFor(m => m.Roletype1.id, new SelectList(Model.employQueryType, "roleid", "rolename"), new { @class = "form-control", @id = "Employposition" })
                
                
            </div>
            <div class="input-group pt-4">
                <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                <input type="password" class="form-control" id="regpassword" placeholder="Enter Password" />
                <div class="valid-feedback">Looks Good</div>
                <div class="invalid-feedback">Enter Password</div>
            </div>
            <div class="input-group pt-4">
                <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                <input type="password" class="form-control" id="conpassword" placeholder="Retype Password" />
                <div class="valid-feedback">Looks Good</div>
                <div class="invalid-feedback">Enter Password</div>
            </div>
            <div class="input-group pt-4">

                <input type="number" class="form-control text-center fw-bolder" id="otpset" style="letter-spacing:30px;background-color:#ffdde1;" placeholder="OTP" />

            </div>
            <div class="input-group pt-4">
                <span class="input-group-text"><i class="fa-solid fa-check"></i></span>
                <input type="number" class="form-control text-center" id="otpget" style="letter-spacing:30px" placeholder="OTP" />

            </div>
            <div class="d-grid pt-5">
                <button type="submit" value="submit" class="btn btn-success" onclick="Create();">Create Now</button>
                <p class="text-center pt-5">
                    You Already Have Account ? <a style="color:green" asp-controller="Account" asp-action="login">Login</a>
                </p>
            </div>

        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
                <script src="~/lib/jquery/dist/jquery.min.js"></script>
             <script src="~/js/Registeration.js"></script>
             <script src="~/js/jQuery.js"></script>